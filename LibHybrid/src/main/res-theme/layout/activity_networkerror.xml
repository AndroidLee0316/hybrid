<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hybrid_color_net_error_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:clickable="true"
    >
        <com.pasc.lib.hybrid.widget.WebCommonTitleView
            android:id="@+id/common_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.pasc.lib.hybrid.widget.WebCommonTitleView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <ImageView
            android:id="@+id/iv_empty_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/paschybrid_ic_net_error"
            android:layout_above="@+id/tv_empty_tips"
            />

        <TextView
            android:id="@+id/tv_empty_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/hybrid_strings_net_error_tip"
            android:textColor="@color/hybrid_color_net_error_tip"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_retryload"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_below="@id/tv_empty_tips"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/hybrid_strings_net_error_btn"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_size_17"
            android:background="@drawable/paschybrid_bg_stroke_gray"
            />

        <ProgressBar
            android:id="@+id/layout_loading"
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="24dp"
            style="?android:attr/progressBarStyleSmall" />
    </RelativeLayout >





</LinearLayout>

