<?xml version="1.0" encoding="utf-8"?>
<com.flyco.roundview.RoundLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_shape_message_corners"
    android:orientation="vertical"
    app:rv_cornerRadius="12dp"
    app:rv_backgroundColor="@color/white_fcfcfc"
    android:paddingTop="@dimen/dp_20"
    >
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_17"
        android:visibility="gone"
        android:textColor="@color/black_030303"
        />

    <TextView
        android:id="@+id/tv_context"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="您暂未申请深圳通鹏淘电子\n卡,可点击“我要申请”快速办理。"
        android:textColor="@color/black_2E332F"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@color/gray_dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_button_common"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/gray_8d8d8d"
            android:textSize="@dimen/text_size_17" />

        <View
            android:id="@+id/view"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/gray_dddddd" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_button_common"
            android:gravity="center"
            android:text="我要申请"
            android:textColor="@color/blue_27a5f9"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>

</com.flyco.roundview.RoundLinearLayout>