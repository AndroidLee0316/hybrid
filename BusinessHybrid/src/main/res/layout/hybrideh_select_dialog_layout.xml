<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/hybrideh_shape_corners_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/temp_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/hybrideh_black_333333"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        tools:text="中国建设银行"
        android:visibility="gone" />

    <TextView
        android:id="@+id/temp_tv_context"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textColor="@color/hybrideh_black_333333"
        android:textSize="15sp"
        tools:text="0755-8793628" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/hybrideh_gray_dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/temp_tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/hybrideh_selector_button"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/hybrideh_gray_666666"
            android:textSize="18sp" />

        <View
            android:id="@+id/temp_view"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/hybrideh_gray_dddddd" />

        <TextView
            android:id="@+id/temp_tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/hybrideh_selector_button"
            android:gravity="center"
            android:text="呼叫"
            android:textColor="@color/hybrideh_blue_469cf1"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>