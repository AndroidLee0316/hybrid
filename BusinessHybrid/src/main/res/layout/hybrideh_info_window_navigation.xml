<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent_00000000"
    >

  <ImageView
      android:layout_width="20dp"
      android:layout_height="18dp"
      android:layout_gravity="bottom|center_horizontal"
      android:src="@drawable/hybrideh_inverted_triangle_bg"
      />

  <LinearLayout
      android:layout_width="220dp"
      android:layout_height="48dp"
      android:layout_marginBottom="15dp"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/temp_poi_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/hybrideh_bg_navigation_info_left"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp_10"
        android:text="深圳市房产管理局"
        android:textColor="@color/black_333333"
        android:textSize="@dimen/sp_14"
        />

    <TextView
        android:id="@+id/temp_navigation_start"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/hybrideh_bg_navigation_info_right"
        android:drawableLeft="@drawable/hybrideh_ic_navigation_white_up"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:text="导航"
        android:textColor="@color/white_ffffff"
        android:textSize="@dimen/sp_14"
        />
  </LinearLayout>
</FrameLayout>