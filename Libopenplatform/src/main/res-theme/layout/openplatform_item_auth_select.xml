<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:id="@+id/open_auth_select_item_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/open_auth_select_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/text_size_17"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="标题" />

            <TextView
                android:id="@+id/open_auth_select_item_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_666666"
                android:textSize="@dimen/text_size_13"
                android:layout_marginTop="@dimen/dp_10"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="副标题" />
        </LinearLayout>

        <ImageView
            android:id="@+id/open_auth_select_item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/paschybrid_ic_no_collect"/>

    </RelativeLayout>

    <View
        android:id="@+id/open_auth_select_item_split"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_e8e8e8"
        android:layout_marginLeft="15dp"/>

</LinearLayout>