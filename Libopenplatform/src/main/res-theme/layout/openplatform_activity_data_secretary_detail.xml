<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_f4f4f4">

    <com.pasc.lib.hybrid.widget.WebCommonTitleView
        android:id="@+id/view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white_ffffff">

        <ImageView
            android:id="@+id/iv_data_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_data_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_data_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="185dp"
                android:maxLines="1"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/text_size_17"
                tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈好哈哈哈哈哈哈哈好哈哈哈哈哈哈哈好哈哈哈哈哈哈哈好哈哈哈哈哈哈哈好哈哈哈哈哈哈哈好哈好" />

            <TextView
                android:id="@+id/tv_data_auth_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:ellipsize="end"
                android:maxWidth="185dp"
                android:maxLines="1"
                android:textColor="@color/gray_999999"
                android:textSize="@dimen/text_size_13"
                tools:text="哈哈哈哈哈哈哈哈哈哈哈哈哈好哈哈哈哈哈哈哈好哈哈哈哈哈哈哈好哈哈哈哈哈哈哈好哈哈哈哈哈哈哈好哈哈哈哈哈哈哈好哈好"

                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_auth_cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="取消授权"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/text_size_14"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_e8e8e8"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <View
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_c7c7c7"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/gray_999999"
            android:text="已授权内容"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="0.5dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gray_c7c7c7"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>


</LinearLayout>