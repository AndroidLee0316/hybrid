<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f4f4f4"
    android:orientation="vertical"
    >
  <com.pasc.lib.hybrid.widget.WebCommonTitleView
      android:id="@+id/view_title_service"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:hybrid_toolbar_title="服务授权"
      />
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="none"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_ffffff"
        android:orientation="vertical"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="180dp"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
          <ImageView
              android:id="@+id/iv_serviceIcon"
              android:layout_width="56dp"
              android:layout_height="56dp"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="51dp"
              android:src="@drawable/paschybrid_ic_auth_service"
              />
          <TextView
              android:id="@+id/tv_service"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="@dimen/dp_4"
              android:gravity="center"
              android:textColor="@color/black_333333"
              tools:text="一一卡通一卡通一卡通一卡通一卡通一卡通一卡通一卡通卡通"
              />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:src="@drawable/paschybrid_ic_auth_exchange"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
          <ImageView
              android:id="@+id/iv_appIcon"
              android:layout_width="56dp"
              android:layout_height="56dp"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="51dp"
              android:src="@drawable/paschybrid_ic_auth_service"
              />
          <TextView
              android:id="@+id/tv_app"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="@dimen/dp_4"
              android:textColor="@color/black_333333"
              tools:text="市民通"
              />
        </LinearLayout>

      </LinearLayout>
      <TextView
          android:id="@+id/tv_auth_tip"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:textColor="#666666"
          android:textSize="16sp"

          tools:text="该服务由一卡通提供，您同意一卡获取以下权限"
          />
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:layout_marginTop="14dp"
          android:background="@color/gray_e8e8e8"
          />
      <TextView
          android:id="@+id/tv_open_info"
          android:layout_width="match_parent"
          android:layout_height="44dp"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:drawableLeft="@drawable/paschybrid_ic_dot_gray"
          android:drawablePadding="10dp"
          android:gravity="center_vertical"
          android:text="使用您的公开信息（登录名，昵称）"
          android:textColor="@color/gray_999999"
          />


      <LinearLayout
          android:id="@+id/ll_info_content"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:layout_marginTop="10dp"
          android:orientation="vertical"
          >
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/gray_f4f4f4"
          android:orientation="vertical"
          android:paddingBottom="15dp"
          >

        <LinearLayout
            android:id="@+id/authView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:visibility="visible"
            >

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="授权表示同意"
              android:textColor="#8d8d8d"
              />
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="《用户授权协议》"
              android:textColor="@color/paschybrid_auth_protocol"
              />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="同意并授权"
            android:textColor="@color/white_ffffff"
            android:textSize="@dimen/text_size_17"
            tools:background="@drawable/paschybrid_bg_radius_3"
            />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:text="暂不授权"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/text_size_17"
            />
      </LinearLayout>

    </LinearLayout>
  </ScrollView>
</LinearLayout>
